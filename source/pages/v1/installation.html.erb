            function installBundle(a_xpis)
            {
                if (navigator.userAgent.indexOf("Firefox") == -1)
                {
            	    alert("Firefox is required to install these browser extensions.");
                    return;
                }
                var xpiObj = {};
                for (var i=0; i<a_xpis.length; i++)
                {
        	    var xpi = a_xpis[i].split(/:/);
                    var name = xpi[0];
                    var url;
                    var file;
                    if (xpi[1]) {
                       url = "http://addons.mozilla.org/en-US/firefox/downloads/latest/" + xpi[1] + "/";
                       file = "addon-" + xpi[1] + "-latest.xpi";

                    } else {

                       url = "http://alpheios.net/xpi-install/";
                       file = "alpheios-" + xpi[0] + "-latest.xpi";
                    }
                    xpiObj[name] = url + file;
                }
                InstallTrigger.install(xpiObj,function(){});
            }
        </script>
