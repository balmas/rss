<div class="intro-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <h1>Poetry</h1>
      </div>
    </div>
  </div>
</div>
<div class="content-section-a">
  <!-- Header -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-sm-12" xml:lang="grc">
        <div id="current-transcript" class="poetry transcript">
        </div>
      </div>
    </div>
  </div>
</div>
<div class="content-section-a">
  <!-- Header -->
  <div class="container">
    <div class="row">
        <div id="current-controls">
          <span class="poetry control step" role="button" data-track="lombardo-iliad-1-grc" title="Next Word">
            <span class="glyphicon glyphicon-play"></span>
          </span>
          <span class="poetry control repeat disabled" role="button" data-track="lombardo-iliad-1-grc" title="Repeat Word">
            <span class="glyphicon glyphicon-repeat"></span>
          </span>
          <span class="poetry control play disabled" role="button" data-track="lombardo-iliad-1-grc" title="Play From Beginning to Current Word">
            <span class="glyphicon glyphicon-step-forward"></span>
          </span>
          <span class="poetry control restart disabled" role="button" data-track="lombardo-iliad-1-grc" title="Clear and Restart">
            <span class="glyphicon glyphicon-refresh"></span>
          </span>
          <span class="poetry control images" role="button" data-track="lombardo-iliad-1-grc" title="Show Images">
            <span class="glyphicon glyphicon-picture"></span>
          </span>
      </div>
    </div>
  </div>
</div>
<div class="content-section-a">
  <!-- Header -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <div id="lombardo-iliad-1-carousel" class="carousel slide disabled" data-ride="carousel">
          <div class="carousel-inner">
            <div class="item active" data-cue="track-lombardo-iliad-1-grc-cue-1">
              <div class="carousel-start-item"></div>
            </div>
            <div class="item" data-cue="track-lombardo-iliad-1-grc-cue-1">
              <img class="img-responsive" src="/img/poetry/u1.jpg" alt="">
              <div class="carousel-caption">μῆνιν</div>
            </div>
            <div class="item" data-cue="track-lombardo-iliad-1-grc-cue-2">
              <img class="img-responsive" src="/img/poetry/u2.jpg" alt="">
              <div class="carousel-caption">ἄειδε</div>
            </div>
            <div class="item" data-cue="track-lombardo-iliad-1-grc-cue-3">
              <img class="img-responsive" src="/img/poetry/u3.jpg" alt="">
              <div class="carousel-caption">θεὰ</div>
            </div>
            <div class="item" data-cue="track-lombardo-iliad-1-grc-cue-4">
              <img class="img-responsive" src="/img/poetry/u4.jpg" alt="">
              <div class="carousel-caption">Πηληϊάδεω</div>
            </div>
            <div class="item" data-cue="track-lombardo-iliad-1-grc-cue-5">
              <img class="img-responsive" src="/img/poetry/u5.jpg" alt="">
              <div class="carousel-caption">Ἀχιλῆος</div>
            </div>
          </div>
          <a class="left carousel-control" href="#lombardo-iliad-1-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </a>
          <a class="right carousel-control" href="#lombardo-iliad-1-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="content-section-a">
  <!-- Header -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <audio id="lombardo-iliad-1" controls preload="false">
          <source src="/media/take3mp3b_001.mp3" type="audio/mp3">
          <track id="lombardo-iliad-1-grc" label="Greek Recitation" kind="subtitles" src="/media/01.vtt" srclang="grc" default>
        </audio>
      </div>
    </div>
  </div>
</div>
<div id="alpheios-main"
  data-trigger="dblclick,touchstart"
  data-selector=".poetry.transcript"></div>
